<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.example.api_project.NonSwipeableViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sliding_tabs"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        app:tabMode="fixed"
        android:layout_alignParentBottom="true"
        android:background="@color/tabbar_color"
        app:tabIndicatorColor="#74B3D4"
        >

        <com.google.android.material.tabs.TabItem
            android:icon="@drawable/settings_off"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <com.google.android.material.tabs.TabItem
            android:icon="@drawable/subjects_off"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <com.google.android.material.tabs.TabItem
            android:icon="@drawable/calend_off"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <com.google.android.material.tabs.TabItem
            android:icon="@drawable/prof_off"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

    </com.google.android.material.tabs.TabLayout>


</RelativeLayout>