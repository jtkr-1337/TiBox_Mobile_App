<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_btn"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/left_arrow"
        android:fontFamily="@font/khularegular"
        android:hint="Назад"
        android:paddingLeft="0dp"
        android:paddingTop="10dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height='40dp'
        android:fontFamily="@font/overpasssemibold"
        android:padding="5dp"
        android:text="Предметы"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="62dp"
                android:layout_height="52dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="105dp"
                android:src="@drawable/subject_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="105dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/khularegular"
                android:text='Математическое и имитационное моделирование'
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khularegular"
            android:text="Преподаватели: Кулпеппер Полина Дмитриевна, Тихвинский Виталий Игоревич"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khularegular"
            android:text="Аудитории: 210, 405"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khularegular"
            android:text="Дополнительная информация: "
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khularegular"
            android:text="Перейти на страницу предмета на сайте"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:textStyle="italic"/>

    </LinearLayout>


</RelativeLayout>