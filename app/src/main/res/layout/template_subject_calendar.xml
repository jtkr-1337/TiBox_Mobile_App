<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/side_stroke_f"
        >

        <LinearLayout
            android:id="@+id/leftPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/class_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Каб.301"
                android:textSize="8pt"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/khularegular"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="12:40-14:10"
                android:textSize="6pt"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/khularegular"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/leftPanel"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/subject_name"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Математическое и имитационное моделирование"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textSize="8pt"
                />
            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="224dp"
                android:layout_height="19dp"
                android:text="Кулпеппер Полина Дмитриевна"
                android:textSize="6pt"
                android:fontFamily="@font/khularegular"
                android:textColor="@color/grey"
                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>