<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_draph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.api_project.MainActivity"
        android:label="MainActivity">
        <action
            android:id="@+id/action_mainActivity_to_calendarActivity"
            app:destination="@id/calendarActivity" />
        <action
            android:id="@+id/action_mainActivity_to_profileActivity"
            app:destination="@id/profileActivity" />
    </activity>
    <activity
        android:id="@+id/calendarActivity"
        android:name="com.example.api_project.CalendarActivity"
        android:label="CalendarActivity" >
        <action
            android:id="@+id/action_calendarActivity_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_calendarActivity_to_profileActivity"
            app:destination="@id/profileActivity" />
    </activity>
    <activity
        android:id="@+id/profileActivity"
        android:name="com.example.api_project.ProfileActivity"
        android:label="activity_profile"
        tools:layout="@layout/activity_profile">
        <action
            android:id="@+id/action_profileActivity_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_profileActivity_to_calendarActivity"
            app:destination="@id/calendarActivity" />
    </activity>
</navigation>